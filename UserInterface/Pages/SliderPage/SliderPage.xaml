<Page x:Class="UserInterface.Pages.SliderPage.SliderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Pages.SliderPage" xmlns:custom="clr-namespace:UserInterface.CustomControls"
      mc:Ignorable="d"
      xmlns:prism="http://prismlibrary.com/"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SliderPage">
    <Page.Resources>
        <local:TimeSpanToStringFormatConverter x:Key="TimeSpanToStringFormatConverter"></local:TimeSpanToStringFormatConverter>
    </Page.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <custom:PuzzleSlider Grid.Row="0" 
                                 State="{Binding SliderState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="10"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <custom:MenuButton Grid.Row="0"
                               Content="Randomize" 
                               Height="50" 
                               Command="{Binding RandomizeCommand}" 
                               Margin="10,26,200,14"/>
                <Grid x:Name="UserInfo" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0"
                           Grid.Row="0"
                           FontSize="16"
                           FontWeight="DemiBold"
                           Content="Time: "
                           Foreground="Beige"/>
                    <Label Grid.Column="1"
                           Grid.Row="0"
                           Content="{Binding PlayerTime, Converter={StaticResource TimeSpanToStringFormatConverter}}"
                           Foreground="Beige"
                           FontSize="16"
                           FontWeight="DemiBold"/>

                    <Label Grid.Column="0"
                           Grid.Row="1"
                            Content="Moves " 
                           Foreground="Beige"
                           FontSize="16"
                           FontWeight="DemiBold"/>
                    <Label Grid.Column="1"
                           Grid.Row="1"
                           Content="{Binding PlayerMoves}"
                           Foreground="Beige"
                           FontSize="16"
                           FontWeight="DemiBold"/>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>