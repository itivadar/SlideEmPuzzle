<Page x:Class="UserInterface.Pages.GameOverPage.GameOverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Pages.GameOverPage" xmlns:customcontrols="clr-namespace:UserInterface.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="GameOverPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="Astonishing result!"
                   Foreground="{StaticResource TextForegroundBrush}"
                   HorizontalAlignment="Center"
                   FontSize="26"
                   FontFamily="{StaticResource LangarRegular}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition />
                <ColumnDefinition Width="250"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Source ="{StaticResource LeftConfettiIcon}"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                   Grid.Column="0"
                   Text="Time: "
                   FontStyle="Oblique"
                   Foreground="{StaticResource TextForegroundBrush}"
                   Margin="55 90 0 0"
                   FontSize="26"
                   FontFamily="{StaticResource LangarRegular}"/>

                    <TextBlock
                   Grid.Column="1"
                   Text="{Binding Time}"
                   Foreground="{StaticResource TextForegroundBrush}"
                   HorizontalAlignment="Left"
                   Margin="0 90 0 0"
                   FontSize="26"
                   FontFamily="{StaticResource LangarRegular}"/>
                </Grid>
                <Grid Grid.Row="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="67*"></ColumnDefinition>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="75*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                   Grid.Column="0"
                   Text="Slides: "
                   FontStyle="Oblique"
                   Foreground="{StaticResource TextForegroundBrush}"
                   Margin="55 5 0 0"
                   FontSize="26"
                   FontFamily="{StaticResource LangarRegular}" Grid.ColumnSpan="2"/>

                    <TextBlock
                   Grid.Column="2"
                   Text="{Binding MovesMade}"
                   FontStyle="Oblique"
                   Foreground="{StaticResource TextForegroundBrush}"
                   HorizontalAlignment="Left"
                   Margin="55 5 0 0"
                   FontSize="26"
                   FontFamily="{StaticResource LangarRegular}"/>
                </Grid>
            </Grid>

            <Image Grid.Column="3"
                   Source ="{StaticResource RightConfettiIcon}"/>
        </Grid>
        <customcontrols:MenuButton Grid.Row="3"
                                       Command="{Binding OpenMainMenuCommand}"
                                       Content="Main menu"
                                       HorizontalAlignment="Center"
                                       Margin="0 0 0 50" />
       
    </Grid>
</Page>
